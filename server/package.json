{
  "name": "@machining/server",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "build": "tsc && tsc-alias && npm run copy",
    "copy": "copyfiles -u 1 \"src/templates/emails/**/*.ejs\" dist",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "seed": "ts-node -r tsconfig-paths/register src/scripts/seed.ts",
    "start": "npm run build && node dist/server.js",
    "prisma:format": "prisma format --schema=./prisma/schema.prisma",
    "prisma:reset": "prisma migrate reset --schema=./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:nuke": "rd /s /q prisma\\migrations 2>nul & prisma db push --force-reset --schema=./prisma/schema.prisma & npm run prisma:generate",
    "prisma:fresh": "prisma migrate reset --force --schema=./prisma/schema.prisma & rd /s /q prisma\\migrations 2>nul & prisma migrate dev --name init --schema=./prisma/schema.prisma & npm run prisma:generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@azure/msal-node": "^2.16.2",
    "@prisma/client": "^6.8.2",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^4.1.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.0.0",
    "html-to-docx": "^1.8.0",
    "ioredis": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "juice": "^11.0.1",
    "jwt-decode": "^4.0.0",
    "nodemailer": "^6.9.16",
    "pg": "^8.16.0",
    "puppeteer": "^24.8.2",
    "sequelize": "^6.37.5",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/html-to-docx": "^1.8.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.1",
    "@types/sequelize": "^4.28.20",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.7",
    "prisma": "^6.8.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  }
}
