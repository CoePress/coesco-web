{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": ["node_modules", "dist", "**/mcp.json"],
  "exec": "ts-node -r tsconfig-paths/register src/server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "verbose": true,
  "signal": "SIGTERM",
  "killSignal": "SIGKILL",
  "stdout": true,
  "stderr": true
}
